{
  "extends": [
    "plugin:jsx-a11y/recommended",
    "plugin:tailwind/recommended"
  ],
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".tsx"] }],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": [
      "error",
      {
        "additionalHooks": "(useState|useEffect)"
      }
    ]
  }
}
